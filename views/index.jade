doctype html
html
  head
    title= pageTitle
    //- <meta name="viewport" content="width=device-width, initial-scale=1">
    link(rel="stylesheet", href="stylesheets/windchill.css")
  body
    #page(data-role="page")
      #header(data-role="header")
        h1 Wind Chill Factor
      #content(data-role="content")
        #temperatureBox
          #effective
            span#effective_temp -5
            | &deg;
            br
            span#effective_label effective
          #weather
            span#weather_icon icon
          #below
            #temperature
              span.label Temp:
              br
              span#temperature_value -7
            #windspeed
              span.label Wind speed:
              br
              span#windspeed_value 10

        #location
          #location_text
            p
              | Your position:
              br
              | Latitude:
              span#lat
              br
              | Longitude:
              span#long
          #basicMap

    script(src="openlayers/OpenLayers.js")
    script(src="javascripts/jquery-1.7.1.min.js")
    script(src="javascripts/windchillfactor.js")
